
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<center>
    <form action="/account/register" method="post">
        <label>Name :</label>
        <input type="text" name="name" /><br />
        <label>Address :</label>
        <input type="text" name="address" /><br />
        <label> Phone Number :</label>
        <input type="text" name="phoneNumber" /><br />
